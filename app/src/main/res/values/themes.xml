<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="TestPractico" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/redTT</item>
        <item name="colorPrimaryVariant">@color/grayTT</item>
        <item name="colorOnPrimary">@color/redTT</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/redTT_no_enabled</item>
        <item name="colorSecondaryVariant">@color/redTT_pressed</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:windowBackground">@color/grayWhite</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="materialButtonStyle">@style/ButtonText</item>
        <item name="searchViewStyle">@style/searchViewStyle</item>
        <item name="tabStyle">@style/tabLayout</item>
        <item name="appBarLayoutStyle">@style/tabLayout</item>
        <item name="textInputStyle">@style/textViewStyle</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="imageButtonStyle">@style/buttonStyleImage</item>
    </style>

    <style name="buttonStyleImage" parent="Widget.AppCompat.ImageButton">
        <item name="tint">@android:color/black</item>
    </style>

    <style name="textViewStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">@color/white</item>
    </style>

    <style name="ButtonText" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="searchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="android:background">@android:color/white</item>
    </style>
    <style name="tabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="android:background">@android:color/white</item>
    </style>

</resources>


